#!/bin/sh

RUBY="-v $HOME/.gem:$HOME/.gem -v $HOME/.solargraph:$HOME/.solargraph"
RUBY="${RUBY} -v $HOME/.bundle:$HOME/.bundle"

SRC_DIR="$HOME/source"
OSC_SRC="$SRC_DIR/ood/osc-ood-config"

OSC_CFG="-v $OSC_SRC:$HOME/source/osc-ood-config"
OSC_CFG="$OSC_CFG -v $OSC_SRC/ondemand.osc.edu/apps:/etc/ood/config/apps"
OSC_CFG="$OSC_CFG -v $OSC_SRC/ondemand.osc.edu/locales:/etc/ood/config/locales"
OSC_CFG="$OSC_CFG -v $HOME/source/ood/osc-clusters:/etc/ood/config/clusters.d"

OOD="-v $SRC_DIR/ood/ondemand:$SRC_DIR/ood/ondemand"
OOD="$OOD -v $HOME/ondemand/data:$HOME/ondemand/data"

BASH="-v $HOME/.local/etc/ood-container.bashrc:$HOME/.bashrc"
RPM="-v $HOME/rpmbuild:$HOME/rpmbuild"
BIN="-v $HOME/dev-bin:$HOME/bin"
NODE="-v $SRC_DIR/node:$SRC_DIR/node"
TEMP="-v $HOME/temp:$HOME/temp"
MISC="-v $SRC_DIR/misc:$SRC_DIR/misc"

EXTRA_ARGS="$RUBY $OSC_CFG $OOD $BASH $RPM $BIN $NODE $TEMP $MISC"
